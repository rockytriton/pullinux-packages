tar -xf $filename
cd samba-4.13.4

pip install pycryptodome || true

echo "^samba4.rpc.echo.*on.*ncacn_np.*with.*object.*nt4_dc" >> selftest/knownfail

CFLAGS="-I/usr/include/tirpc"          \
LDFLAGS="-ltirpc"                      \
./configure                            \
    --prefix=/usr                      \
    --sysconfdir=/etc                  \
    --localstatedir=/var               \
    --with-piddir=/run/samba           \
    --with-pammodulesdir=/lib/security \
    --enable-fhs                       \
    --without-ad-dc                    \
    --enable-selftest

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/lib

mv -v $pckdir/usr/lib/libnss_win{s,bind}.so.*  $pckdir/lib                       &&
ln -v -sf ../../lib/libnss_winbind.so.2 $pckdir/usr/lib/libnss_winbind.so &&
ln -v -sf ../../lib/libnss_wins.so.2    $pckdir/usr/lib/libnss_wins.so    &&

install -v -m644    examples/smb.conf.default $pckdir/etc/samba &&

mkdir -pv $pckdir/etc/openldap/schema                        &&

install -v -m644    examples/LDAP/README              \
                    $pckdir/etc/openldap/schema/README.LDAP  &&

install -v -m644    examples/LDAP/samba*              \
                    $pckdir/etc/openldap/schema              &&

install -v -m755    examples/LDAP/{get*,ol*} \
                    $pckdir/etc/openldap/schema


