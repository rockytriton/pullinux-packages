tar -xf $filename
pckname=${filename%.t*}
cd firefox-78.8.0

mountpoint -q /dev/shm || mount -t tmpfs devshm /dev/shm

export SHELL=/bin/sh


mkdir obj &&
cd    obj &&

CC=gcc CXX=g++ \
../js/src/configure --prefix=/usr            \
                    --with-intl-api          \
                    --with-system-zlib       \
                    --with-system-icu        \
                    --disable-jemalloc       \
                    --disable-debug-symbols  \
                    --enable-readline 


make && make DESTDIR=$pckdir install

rm -v $pckdir/usr/lib/libjs_static.ajs &&
sed -i '/@NSPR_CFLAGS@/d' $pckdir/usr/bin/js78-config

