tar -xf $filename
cd ncurses-6.2

./configure --prefix=/usr           \
            --mandir=/usr/share/man \
            --with-shared           \
            --without-debug         \
            --without-normal        \
            --enable-pc-files       \
            --enable-widec

make
make DESTDIR=$pckdir install

mkdir $pckdir/lib

mv -v $pckdir/usr/lib/libncursesw.so.6* $pckdir/lib

ln -sfv ../../lib/$(readlink $pckdir/usr/lib/libncursesw.so) $pckdir/usr/lib/libncursesw.so

for lib in ncurses form panel menu ; do
    rm -vf                    $pckdir/usr/lib/lib${lib}.so
    echo "INPUT(-l${lib}w)" > $pckdir/usr/lib/lib${lib}.so
    ln -sfv ${lib}w.pc        $pckdir/usr/lib/pkgconfig/${lib}.pc
done

rm -vf                     $pckdir/usr/lib/libcursesw.so
echo "INPUT(-lncursesw)" > $pckdir/usr/lib/libcursesw.so
ln -sfv libncurses.so      $pckdir/usr/lib/libcurses.so

rm -fv $pckdir/usr/lib/libncurses++w.a

mkdir -pv       $pckdir/usr/share/doc/ncurses-6.2
cp -v -R doc/* $pckdir/usr/share/doc/ncurses-6.2

