tar -xf $filename
cd bzip2-1.0.8

patch -Np1 -i ../bzip2-1.0.8-install_docs-1.patch

sed -i 's@\(ln -s -f \)$(PREFIX)/bin/@\1@' Makefile

sed -i "s@(PREFIX)/man@(PREFIX)/share/man@g" Makefile

make -f Makefile-libbz2_so
make clean

make

make PREFIX=$pckdir/usr install

mkdir -p $pckdir/bin
mkdir -p $pckdir/lib

mkdir -p $pckdir/usr/bin
mkdir -p $pckdir/usr/lib


cp -v bzip2-shared $pckdir/bin/bzip2
cp -av libbz2.so* $pckdir/lib
ln -sv ../../lib/libbz2.so.1.0 $pckdir/usr/lib/libbz2.so
rm -v $pckdir/usr/bin/{bunzip2,bzcat,bzip2}
ln -sv bzip2 $pckdir/bin/bunzip2
ln -sv bzip2 $pckdir/bin/bzcat

rm -fv $pckdir/usr/lib/libbz2.a

