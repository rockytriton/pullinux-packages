tar -xf $filename
cd db-5.3.28

sed -i 's/\(__atomic_compare_exchange\)/\1_db/' src/dbinc/atomic.h

cd build_unix
../dist/configure --prefix=/usr --disable-static --enable-compat185 --enable-dbm --enable-cxx

make && make DESTDIR=$pckdir docdir=/usr/share/doc/db-5.3.28 install

chown -v -R root:root                        \
      $pckdir/usr/bin/db_*                          \
      $pckdir/usr/include/db{,_185,_cxx}.h          \
      $pckdir/usr/lib/libdb*.{so,la}                \
      $pckdir/usr/share/doc/db-5.3.28


