tar -xf $filename
cd libtirpc-1.3.1

./configure --prefix=/usr                                   \
            --sysconfdir=/etc                               \
            --disable-static                                \
            --disable-gssapi

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/lib

mv -v $pckdir/usr/lib/libtirpc.so.* $pckdir/lib &&
ln -sfv ../../lib/libtirpc.so.3.0.0 $pckdir/usr/lib/libtirpc.so

