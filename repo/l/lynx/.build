tar -xf $filename
pckname=${filename%.t*}
cd lynx2.8.9rel.1-lynx2.8.9rel.1 || cd $pckname

./configure --prefix=/usr --sysconfdir=/etc/lynx \
            --datadir=/usr/share/doc/lynx-2.8.9rel.1 \
            --with-zlib            \
            --with-bzlib           \
            --with-ssl             \
            --with-screen=ncursesw \
            --enable-locale-charset

make && make DESTDIR=$pckdir install-full

chgrp -R root $pckdir/usr/share/doc/lynx-2.8.9rel.1/lynx_doc

