tar -xf $filename
pckname=${filename%.t*}
cd a52dec-0.7.4 || cd $pckname

./configure --prefix=/usr \
            --mandir=/usr/share/man \
            --enable-shared \
            --disable-static \
            CFLAGS="-g -O2 $([ $(uname -m) = x86_64 ] && echo -fPIC)"

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/usr/include/a52dec

cp liba52/a52_internal.h $pckdir/usr/include/a52dec &&
install -v -m644 -D doc/liba52.txt \
    $pckdir/usr/share/doc/liba52-0.7.4/liba52.txt


