tar -xf $filename
pckname=${filename%.t*}
cd libinput-1.16.4 || cd $pckname

mkdir build && cd build

meson --prefix=$XORG_PREFIX \
      -Dudev-dir=/lib/udev  \
      -Ddebug-gui=false     \
      -Dtests=false         \
      -Ddocumentation=false \
      -Dlibwacom=false      \
      ..

ninja && DESTDIR=$pckdir ninja install

