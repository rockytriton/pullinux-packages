tar -xf $filename
pckname=${filename%.t*}
cd khelpcenter-20.12.2 || cd $pckname

mkdir build && cd build
cmake -DCMAKE_INSTALL_PREFIX=$KF5_PREFIX -DCMAKE_PREFIX_PATH=$QT5DIR \
      -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF -Wno-dev ..
make && make DESTDIR=$pckdir install

mkdir -p $pckdir/usr/share/applications/

mv -v $pckdir/$KF5_PREFIX/share/kde4/services/khelpcenter.desktop $pckdir/usr/share/applications/ &&
rm -rv $pckdir/$KF5_PREFIX/share/kde4

