tar -xf $filename
cd krb5-1.19.1

cd src &&

sed -i -e 's@\^u}@^u cols 300}@' tests/dejagnu/config/default.exp     &&
sed -i -e '/eq 0/{N;s/12 //}'    plugins/kdb/db2/libdb2/test/run.test &&
sed -i '/t_iprop.py/d'           tests/Makefile.in                    &&

./configure --prefix=/usr            \
            --sysconfdir=/etc        \
            --localstatedir=/var/lib \
            --runstatedir=/run       \
            --with-system-et         \
            --with-system-ss         \
            --with-system-verto=no   \
            --enable-dns-for-realm

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/lib
mkdir -p $pckdir/bin

for f in gssapi_krb5 gssrpc k5crypto kadm5clnt kadm5srv \
         kdb5 kdb_ldap krad krb5 krb5support verto ; do

    find $pckdir/usr/lib -type f -name "lib$f*.so*" -exec chmod -v 755 {} \;    
done          &&

mv -v $pckdir/usr/lib/libkrb5.so.3*        $pckdir/lib &&
mv -v $pckdir/usr/lib/libk5crypto.so.3*    $pckdir/lib &&
mv -v $pckdir/usr/lib/libkrb5support.so.0* $pckdir/lib &&

ln -v -sf ../../lib/libkrb5.so.3.3        $pckdir/usr/lib/libkrb5.so        &&
ln -v -sf ../../lib/libk5crypto.so.3.1    $pckdir/usr/lib/libk5crypto.so    &&
ln -v -sf ../../lib/libkrb5support.so.0.1 $pckdir/usr/lib/libkrb5support.so &&

mv -v $pckdir/usr/bin/ksu $pckdir/bin &&
chmod -v 755 $pckdir/bin/ksu   &&

install -v -dm755 $pckdir/usr/share/doc/krb5-1.19.1 &&
cp -vfr ../doc/*  $pckdir/usr/share/doc/krb5-1.19.1

