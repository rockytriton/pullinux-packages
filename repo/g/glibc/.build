tar -xf $filename
cd glibc-2.33
patch -Np1 -i ../glibc-2.33-fhs-1.patch
sed -e '402a\      *result = local->data.services[database_index];' \
    -i nss/nss_database.c

mkdir -v build
cd       build

../configure --prefix=/usr                            \
             --disable-werror                         \
             --enable-kernel=3.2                      \
             --enable-stack-protector=strong          \
             --with-headers=/usr/include              \
             libc_cv_slibdir=/lib

make

mkdir $pckdir/etc

touch $pckdir/etc/ld.so.conf

sed '/test-installation/s@$(PERL)@echo not running@' -i ../Makefile

make DESTDIR=$pckdir install

cp -v ../nscd/nscd.conf $pckdir/etc/nscd.conf
mkdir -pv $pckdir/var/cache/nscd

install -v -Dm644 ../nscd/nscd.tmpfiles $pckdir/usr/lib/tmpfiles.d/nscd.conf
install -v -Dm644 ../nscd/nscd.service $pckdir/lib/systemd/system/nscd.service

cp ../../tzdata2021a.tar.gz $pckdir/.install

