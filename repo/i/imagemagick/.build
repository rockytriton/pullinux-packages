tar -xf $filename
pckname=${filename%.t*}
cd imagemagick-7.0.11 || cd $pckname

./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --enable-hdri     \
            --with-modules    \
            --with-perl       \
            --disable-static

make && make DESTDIR=$pckdir DOCUMENTATION_PATH=/usr/share/doc/imagemagick-7.0.11 install

