tar -xf $filename
pckname=${filename%.t*}
cd iptables-1.8.7 || cd $pckname

./configure --prefix=/usr      \
            --sbindir=/sbin    \
            --disable-nftables \
            --enable-libipq    \
            --with-xtlibdir=/lib/xtables

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/usr/bin
mkdir -p $pckdir/lib

ln -sfv ../../sbin/xtables-legacy-multi $pckdir/usr/bin/iptables-xml &&

for file in ip4tc ip6tc ipq xtables
do
  mv -v $pckdir/usr/lib/lib${file}.so.* $pckdir/lib &&
  ln -sfv ../../lib/$(readlink $pckdir/usr/lib/lib${file}.so) $pckdir/usr/lib/lib${file}.so
done

