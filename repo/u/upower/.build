tar -xf $filename
pckname=${filename%.t*}
cd upower-0.99.11 || cd $pckname

./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --localstatedir=/var \
            --enable-deprecated  \
            --disable-static

make && make DESTDIR=$pckdir install

