tar -xf $filename
cd dbus-1.12.20

./configure --prefix=/usr                        \
            --sysconfdir=/etc                    \
            --localstatedir=/var                 \
            --disable-static                     \
            --disable-doxygen-docs               \
            --disable-xml-docs                   \
            --docdir=/usr/share/doc/dbus-1.12.20 \
            --with-console-auth-dir=/run/console \
            --with-system-pid-file=/run/dbus/pid \
            --with-system-socket=/run/dbus/system_bus_socket

make && make DESTDIR=$pckdir install

mkdir -p $pckdir/lib
mkdir -p $pckdir/var/lib

mv -v $pckdir/usr/lib/libdbus-1.so.* $pckdir/lib
ln -sfv ../../lib/$(readlink $pckdir/usr/lib/libdbus-1.so) $pckdir/usr/lib/libdbus-1.so

ln -sfv /etc/machine-id $pckdir/var/lib/dbus

