tar -xf $filename
cd readline-8.1

sed -i '/MV.*old/d' Makefile.in
sed -i '/{OLDSUFF}/c:' support/shlib-install

./configure --prefix=/usr    \
            --disable-static \
            --with-curses    \
            --docdir=/usr/share/doc/readline-8.1

make SHLIB_LIBS="-lncursesw"

make SHLIB_LIBS="-lncursesw" DESTDIR=$pckdir install

mkdir $pckdir/lib

mv -v $pckdir/usr/lib/lib{readline,history}.so.* $pckdir/lib
ln -sfv ../../lib/$(readlink $pckdir/usr/lib/libreadline.so) $pckdir/usr/lib/libreadline.so
ln -sfv ../../lib/$(readlink $pckdir/usr/lib/libhistory.so ) $pckdir/usr/lib/libhistory.so

install -v -m644 doc/*.{ps,pdf,html,dvi} $pckdir/usr/share/doc/readline-8.1


