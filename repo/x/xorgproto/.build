tar -xf $filename
pckname=${filename%.t*}
cd xorgproto-2020.1 || cd $pckname

mkdir build && cd build
meson --prefix=$XORG_PREFIX -Dlegacy=true ..
ninja && DESTDIR=$pckdir ninja install

install -vdm 755 $pckdir/$XORG_PREFIX/share/doc/xorgproto-2020.1 &&
install -vm 644 ../[^m]*.txt ../PM_spec $pckdir/$XORG_PREFIX/share/doc/xorgproto-2020.1

