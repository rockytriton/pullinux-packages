tar -xf $filename
pckname=${filename%.t*}
cd xf86-video-intel-20210222 || cd $pckname

./autogen.sh $XORG_CONFIG     \
            --enable-kms-only \
            --enable-uxa      \
            --mandir=/usr/share/man

make && make DESTDIR=$pckdir install

