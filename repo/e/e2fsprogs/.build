tar -xf $filename
cd e2fsprogs-1.46.1

mkdir -v build
cd       build

../configure --prefix=/usr           \
             --bindir=/bin           \
             --with-root-prefix=""   \
             --enable-elf-shlibs     \
             --disable-libblkid      \
             --disable-libuuid       \
             --disable-uuidd         \
             --disable-fsck

make && make DESTDIR=$pckdir install

rm -fv $pckdir/usr/lib/{libcom_err,libe2p,libext2fs,libss}.a


